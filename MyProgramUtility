package prog2.finalgroup;//di ako sure pero ito yata un,, bat may employee ung kanina anteh ansuigjnskengkse

import java.io.BufferedReader;
import java.io.FileReader;
import java.util.ArrayList;
import java.util.List;

public class MyProgramUtility {


    public static List<Citizen> readDataFileIntoList(String filename) {
        try {
            List<Citizen> citizens = new ArrayList<>();
            BufferedReader reader = new BufferedReader(new FileReader(filename));
            String line;
            while ((line = reader.readLine()) != null) {
                String[] data = line.split(",(?=([^\"]*\"[^\"]*\")*[^\"]*$)", -1);

                // Check if the data array has enough elements
                if (data.length >= 8) {

                    String fullName = data[0] + " " + data[1]; // Forms full name from the first and last name.
                    String address = data[3].replace("\"", ""); // Replace double quotes with spaces for the third field only
                    boolean resident = data[5].equalsIgnoreCase("Resident"); // Check if the resident field is "Resident"
                    int age = Integer.parseInt(data[4].trim());
                    int district = Integer.parseInt(data[6].trim());
                    char gender = data[7].charAt(0);
                    Citizen citizen = new Citizen(data[0], data[1], data[2], address, age, resident, district, gender);

                    citizens.add(citizen);
                    System.out.println(citizen);
                } else {
                    throw new RuntimeException("Invalid data format in line: " + line);
                }
            }
            reader.close();
            return citizens;
        } catch (Exception e) {
            throw new RuntimeException("Data file read error: " + e.getMessage());
        }
    }

}
