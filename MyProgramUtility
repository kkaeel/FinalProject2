import java.io.BufferedReader;
import java.io.FileReader;
import java.util.ArrayList;
import java.util.List;

public class MyProgramUtility {

    public static void main(String[] args) {
        
    }
    
    private List<Citizen> readDataFileIntoList(String filename) {
    try {
        List<Citizen> citizen = new ArrayList<>();
        BufferedReader reader = new BufferedReader(new FileReader(filename));
        while (true) {
            String line = reader.readLine();
            if (line == null) {
                break;
            }
            String[] data = line.split(",");//splits data fields using comma
            boolean resident = data[4].equalsIgnoreCase("resident");
            Citizen cit = new Citizen(data[0],data[1],data[2],data[3],Integer.parseInt(data[4]),resident,Integer.parseInt(data[5]),data[6].charAt(0));
            //boolean permanent = data[7].equalsIgnoreCase("permanent");
            //Employee emp = new Employee(data[0], data[1], data[4], data[2].charAt(0), Integer.parseInt(data[3]), permanent, Double.parseDouble(data[6]), Integer.parseInt(data[5])); //data fields
            //employees.add(emp);
            System.out.println(cit);
        }
        reader.close();
        return citizen;
        
    } catch (Exception e) {
        throw new RuntimeException("Data file read error.");
    }
}
}
